generator client {
  provider = "prisma-client-js"
  output   = "../generate/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String   @unique   
  password String
  folders Folder[]
  files   File[]
}

model Folder {
  id      Int      @id @default(autoincrement())
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
  name    String
  parentId Int?
  parent  Folder?  @relation("ParentChildren", fields: [parentId], references: [id])
  children Folder[] @relation("ParentChildren")
  files   File[]
}

model File {
  id      Int      @id @default(autoincrement())
  prefix  String   @unique
  originalName String
  folderId Int?
  folder Folder?    @relation(fields: [folderId], references: [id])
  url     String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}